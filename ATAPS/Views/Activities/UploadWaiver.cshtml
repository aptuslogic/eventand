
@{
    ViewBag.Title = "Upload Waiver";
}

<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha256-/SIrNqv8h6QGKDuNoLGA4iret+kyesCkHGzVUUV0shc=" crossorigin="anonymous"></script>
<script src="/Scripts/breadcrumbs.js"></script>
<div id="breadcrumbs"></div>
<script language="Javascript">
    $("#breadcrumbs").breadcrumbs();
</script>

<h2>Upload Waiver for @ViewBag.ActivityName</h2>

<p>
    <a href="javascript:window.history.back()">Back to Waivers</a>
</p>

<form action="/Activities/UploadWaiver/" method="post" enctype="multipart/form-data">

    <input type="hidden" name="id" value="@ViewBag.ActivityID" />

    <div class="form-group">
        <label class="control-label col-md-2">Label</label>
        <div class="col-md-10">
            <input class="form-control" type="text" name="Label" />
        </div>
    </div><br /><br />

    <div class="form-group">
        <label class="control-label col-md-2">Document</label>
        <div class="col-md-10">
            <input class="form-control file-upload" name="Document" type="file" />
        </div>
    </div><br /><br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-default" />
        </div>
    </div>

</form>

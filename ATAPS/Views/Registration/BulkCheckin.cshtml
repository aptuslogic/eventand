@model IEnumerable<ATAPS.Models.Attendee>

@{
    ViewBag.Title = "BulkCheckin";
}

<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha256-/SIrNqv8h6QGKDuNoLGA4iret+kyesCkHGzVUUV0shc=" crossorigin="anonymous"></script>

<h2>Bulk Checkin (for bus: @ViewBag.BusName)</h2>

<p>
    <a href="/Registration/Busses?id=@Request["id"]">Back to Bus Master</a>
</p>

@using (Html.BeginForm())
{
    <p>
        Search by name or RFID number: @Html.TextBox("SearchString", "", new {style="width:300px; height:50px; font-size:18pt"})
        <input type="submit" value="Search" / style="width:100px; height:50px">
    </p>
}

@if (ViewBag.searchString != null)
{
    <table class="table" id="attendee-table">
        <thead>
            <tr>
                <th>
                    Last Name
                </th>
                <th>
                    First Name
                </th>

                <th>Thumbnail</th>

                <th>
                    RFID
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mobile)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="attendee-table-body">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td style="text-align:center">
                        <img src="@Html.DisplayFor(modelItem => item.Filename)" alt="None" style="height:50px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RfID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        <a href="/Registration/IndivCheckin?id=@item.ID&bus=@Request["id"]"><button>Register</button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}